{
    "name": "MentorNexus Development",
    "image": "mcr.microsoft.com/devcontainers/java:17",
    "features": {
        "ghcr.io/devcontainers/features/java:1": {
            "version": "17",
            "installMaven": true
        }
    },
    "forwardPorts": [8080],
    "postCreateCommand": "mvn clean install",
    "customizations": {
        "vscode": {
            "extensions": [
                "vscjava.vscode-java-pack",
                "redhat.vscode-xml",
                "vmware.vscode-spring-boot"
            ]
        }
    }
}
